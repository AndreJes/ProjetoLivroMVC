@model ProjetoLivroASPMVC.Areas.Seguranca.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        @ViewBag.Title
    </div>

    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Id)
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><img src="~/Content/Icons/svg/person.svg" alt="icon name" /></span>
                </div>
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName)
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><img src="~/Content/Icons/svg/person.svg" alt="icon name" /></span>
                </div>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text"><img src="~/Content/Icons/svg/person.svg" alt="icon name" /></span>
                </div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>

    <div class="card-footer">
        @Html.ActionLink("Editar USUÁRIO", "Edit", new { id = Model.Id }, new { @class = "btn btn-info" })
        @Html.ActionLink("Retornar a lista", "Index", null, new { @class = "btn btn-warning" })
    </div>
</div>

