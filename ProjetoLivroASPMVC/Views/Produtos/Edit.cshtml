@model ProjetoLivroASPMVC.Models.Produto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Alterar PRODUTO";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header bg-primary text-white">
            @ViewBag.Title
        </div>

        <div class="card-body">
            <div>
                <h4>
                    @Html.LabelFor(m => m.ProdutoID, new { @class = "label label-default" }): @Model.ProdutoID
                </h4>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ProdutoID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new {@class="form-control"}})
                        @Html.ValidationSummary(true, "", new {@class="text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoriaID,"CategoriaID", htmlAttributes: new {@class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("CategoriaID", null, htmlAttributes: new {@class="form-control" })
                        @Html.ValidationMessageFor(model => model.CategoriaID, "", new { @class="text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FabricanteID, "FabricanteID", htmlAttributes: new { @class="control-label col-md-2"})
                    <div class="col-md-10">
                        @Html.DropDownList("FabricanteID", null, htmlAttributes: new { @class="form-control"})
                        @Html.ValidationMessageFor(model => model.FabricanteID, "", new { @class="text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Alterar" class="btn btn-warning" />
                        @Html.ActionLink("Retornar a Lista", "Index", null, new { @class="btn btn-danger"})
                    </div>
                </div>
            </div>
        </div>
    </div>

}

@section ScriptPage {
    <script type="text/javascript">
        $(document).ready(function () {
            $('li').removeClass("active");
            $('#liProdutos').addClass("active");
        });
    </script>
}

