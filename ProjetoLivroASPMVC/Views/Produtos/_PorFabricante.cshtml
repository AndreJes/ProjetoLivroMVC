@model IEnumerable<Modelo.Cadastros.Produto>

<div class="card">
    <div class="card-header bg-primary text-white">
        PRODUTOS registrados deste Fabricante
    </div>

    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ProdutoID)</th>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>Categoria</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProdutoID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categoria.Nome)
                        </td>
                        <td>
                            @Html.ActionLink("Alterar", "Edit", "Produtos", new { id = item.ProdutoID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Detalhes", "Details", "Produtos", new { id = item.ProdutoID }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Excluir", "Delete", "Produtos", new { id = item.ProdutoID }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="card-footer">
    </div>
</div>
