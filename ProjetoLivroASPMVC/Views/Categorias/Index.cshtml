@using ProjetoLivroASPMVC.Models

@model IEnumerable<Categoria>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.CategoriaID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.CategoriaID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.CategoriaID })
                    </td>
                </tr>
            }
        </tbody>
    
    </table>
</body>
</html>
