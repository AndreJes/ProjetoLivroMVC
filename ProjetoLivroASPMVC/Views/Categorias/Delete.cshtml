@model ProjetoLivroASPMVC.Models.Categoria

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Excluir FABRICANTE";
}

<div class="card">
    <div class="card-header bg-primary text-white">
        @ViewBag.Title
    </div>

    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Nome)
            <br />
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><img src="~/Content/Icons/svg/aperture.svg" alt="icon name" /></span>
                </div>
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>
    </div>

    <div class="card-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Excluir CATEGORIA" class="btn btn-danger" />
            @Html.ActionLink("Retornar a Lista", "Index", null, new { @class="btn btn-warning"})
        }
    </div>
</div>
